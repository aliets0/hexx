#include <stdio.h>
#include <stdlib.h>
#include <string.h>

int hex(int place, int num);
int pwr(int num1, int pwrn);
int b10(int num1);

int main(){

  char *p, str[10], i ;
  int pp, r;
  p = &str[i];
  
  printf("> ");
  
  fgets(str, 10, stdin);
  
  while(*p){
    switch(strlen(str))
      {
      case 2:
	pp = 4;
      case 3:
	pp = 3;
      case 4:
	pp = 2;
      case 5:
	pp = 1;
      }
    pp-=1;
   

    
    if(*p == '1'){
      r += hex(pp, 1);
      
    }
    if(*p == '2'){
      r += hex(pp, 2);
      
    }
    if(*p == '3'){
      r += hex(pp, 3);
      
    }
    if(*p == '4'){
      r += hex(pp, 4);
      
    }
    if(*p == '5'){
      r += hex(pp, 5);
      
    }
    if(*p == '6'){
      r += hex(pp, 6);
      
    }
    if(*p == '7'){
      r += hex(pp, 7);
      
    }
    if(*p == '8'){
      r += hex(pp, 8);
      
    }
      if(*p == '9'){
	r += hex(pp, 9);
        
      }
      if(*p == 'A'){
	r += hex(pp, 10);
        
      } 
      if(*p == 'B'){
	r += hex(pp, 11);
        
      }
      if(*p == 'C'){
	r += hex(pp, 12);
        
      }
      if(*p == 'D'){
	r += hex(pp, 13);
        
      }
      if(*p == 'E'){
	r += hex(pp, 14);
        
      }
      if(*p == 'F'){
	r += hex(pp, 15);
        
      }
      *p++;
      
  } 
  printf("hex is %d", r);
  return 0;
}

int hex(int place, int num)
{
  int result;
  
  result = num + pwr(place, 16);

  return result;
 
}

int pwr(int num1, int pwrn){

  int i;
  for(i=0;i<pwrn;i++){
    num1 *= num1;
  }
  
  return num1;
}
